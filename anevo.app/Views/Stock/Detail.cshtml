@using anevo.app.Models;
@using anevo.app.ViewModels;
@using api.allinoneapi.Models.Stocks.Polygon;
@model StockDetailViewModel;
@{
    ViewData["Title"] = @Model.TickersMainPage.First().name;
}


@if(Model.TickersMainPage != null)
    {
    <div class="container-fluid p-3">
        <div class="row">
            <div class="col-12 mblock">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col" id="detail">
                            <h1 class="d-inline-block detail-name">
                                @Model.TickersMainPage.First().name
                            </h1>
                            <span class="opacity-75 p-2 detail-ticker">
                                @Model.TickersMainPage.First().ticker
                            </span>
                            <div class="price d-block">
                                @{
                                    string symbol = " $";

                                    if (Model.TickersMainPage.First().currency_name == "usd")
                                    {
                                        @String.Format("{0}", Model.TickersMainPage.First().closePrice + symbol)
                                    }
                                }

                            </div>
                        </div>
                        <div class="col my-auto detail-image">
                            @{
                                string ticker = @Model.TickersMainPage.First().ticker + ".png";
                            }
                            <div class="my-auto table-row pull-right align-middle">
                                <img src="~/img/stocks/@ticker" height="70" width="100" class="img-stock pic" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    
